<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryDarkColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>

        <item name="colorSurface">#1C1B1F</item>
<!--        <item name="colorSurfaceVariant">@color/surfaceDark</item>-->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/Theme.Toolbar</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close_24</item>

        <item name="materialCardViewStyle">@style/Widget.Material3.CardView.Elevated</item>
    </style>

    <style name="Theme.Toolbar" parent="Widget.Material3.Toolbar.Surface">
        <item name="materialThemeOverlay">@style/Theme.ToolbarOverlay</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
        <item name="titleCentered">true</item>
    </style>

    <style name="Theme.ToolbarOverlay" parent="">
        <item name="colorSurface">@color/primaryDarkColor</item>
        <item name="colorOnSurface">@color/primaryTextColor</item>
    </style>

</resources>